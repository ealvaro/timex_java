<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
         http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="placeholderConfig"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location"
			value="WEB-INF/classes/timex-servlet.properties" />
	</bean>

	<!-- URL mapping -->
	<bean id="urlMap"
		class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="urlMap">
			<props>
				<prop key="/signin.htm">signInController</prop>
				<prop key="/signout.htm">signOutController</prop>
			</props>
		</property>
	</bean>
	<bean id="urlMapAuthenticate"
		class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="interceptors">
			<list>
				<ref bean="httpRequestInterceptor" />
			</list>
		</property>
		<property name="urlMap">
			<props>
				<prop key="/timesheetlist.htm">timesheetListController</prop>
				<prop key="/enterhours.htm">enterHoursController</prop>
				<prop key="/approvetimesheets.htm">approveTimesheetsController</prop>				
				<prop key="/printhours.htm">printTimesheetController</prop>
				<prop key="/staffhours.htm">staffHoursController</prop>
				<prop key="/overallsummary.htm">managerSummaryController</prop>
				<prop key="/markpaid.htm">accountingController</prop>
				<prop key="/printhours2.htm">printTimesheetController2</prop>
			</props>
		</property>
	</bean>
	<bean id="httpRequestInterceptor"
		class="com.visualpatterns.timex.controller.HttpRequestInterceptor">
		<property name="signInPage">
			<value>signin.htm</value>
		</property>
		<property name="applicationSecurityManager">
			<ref bean="applicationSecurityManager" />
		</property>
	</bean>

	<!-- Controllers -->
	<bean id="urlFilenameController"
		class="org.springframework.web.servlet.mvc.UrlFilenameViewController" />
	<bean name="signInController"
		class="com.visualpatterns.timex.controller.SignInController">
		<property name="sessionForm">
			<value>true</value>
		</property>
		<property name="formView">
			<value>/signin</value>
		</property>
		<property name="successView">
			<value>redirect:timesheetlist.htm</value>
		</property>
		<property name="commandClass">
			<value>com.visualpatterns.timex.model.Employee</value>
		</property>
		<property name="validator">
			<ref bean="signinValidator" />
		</property>
		<property name="employeeManager">
			<ref bean="employeeManager" />
		</property>
		<property name="applicationSecurityManager">
			<ref bean="applicationSecurityManager" />
		</property>
		<property name="timexJmxBean">
			<ref bean="timexJmxBean" />
		</property>
	</bean>
	<bean name="signOutController"
		class="com.visualpatterns.timex.controller.SignOutController">
		<property name="applicationSecurityManager">
			<ref bean="applicationSecurityManager" />
		</property>
		<property name="successView">
			<value>redirect:signin.htm</value>
		</property>
	</bean>
	<bean name="timesheetListController"
		class="com.visualpatterns.timex.controller.TimesheetListController">
		<property name="timesheetManager">
			<ref bean="timesheetManager" />
		</property>
		<property name="applicationSecurityManager">
			<ref bean="applicationSecurityManager" />
		</property>
		<property name="timexJmxBean">
			<ref bean="timexJmxBean" />
		</property>
		<property name="successView">
			<value>timesheetlist</value>
		</property>
	</bean>
	<bean name="printTimesheetController2"
		class="com.visualpatterns.timex.controller.PrintTimesheetController2">
		<property name="timesheetManager">
			<ref bean="timesheetManager" />
		</property>
		<property name="timexJmxBean">
			<ref bean="timexJmxBean" />
		</property>
		<property name="successView">
			<value>printhours</value>
		</property>
	</bean>
	<bean name="enterHoursController"
		class="com.visualpatterns.timex.controller.EnterHoursController">
		<property name="sessionForm">
			<value>true</value>
		</property>
		<property name="commandClass">
			<value>com.visualpatterns.timex.model.Timesheet</value>
		</property>
		<property name="formView">
			<value>enterhours</value>
		</property>
		<property name="successView">
			<value>redirect:timesheetlist.htm</value>
		</property>
		<property name="validator">
			<ref bean="enterHoursValidator" />
		</property>
		<property name="timesheetManager">
			<ref bean="timesheetManager" />
		</property>
		<property name="departmentManager">
			<ref bean="departmentManager" />
		</property>
		<property name="applicationSecurityManager">
			<ref bean="applicationSecurityManager" />
		</property>
		<property name="message">
			<ref bean="submittalEmailMessage" />
		</property>
		<property name="mailSender">
			<ref bean="mailSender" />
		</property>
		<property name="employeeManager">
			<ref bean="employeeManager" />
		</property>
	</bean>
	<bean name="approveTimesheetsController"
		class="com.visualpatterns.timex.controller.ApproveTimesheetsController">
		<property name="sessionForm">
			<value>true</value>
		</property>
		<property name="commandClass">
			<value>com.visualpatterns.timex.model.TimesheetList</value>
		</property>
		<property name="formView">
			<value>approvetimesheets</value>
		</property>
		<property name="successView">
			<value>redirect:staffhours.htm</value>
		</property>
		<property name="validator">
			<ref bean="approveTimesheetsValidator" />
		</property>
		<property name="timesheetManager">
			<ref bean="timesheetManager" />
		</property>
		<property name="employeeManager">
			<ref bean="employeeManager" />
		</property>
		<property name="applicationSecurityManager">
			<ref bean="applicationSecurityManager" />
		</property>
		<property name="approvalMessage">
			<ref bean="approvalEmailMessage" />
		</property>
		<property name="disapprovalMessage">
			<ref bean="disapprovalEmailMessage" />
		</property>
		<property name="mailSender">
			<ref bean="mailSender" />
		</property>
		<property name="timexJmxBean">
			<ref bean="timexJmxBean" />
		</property>
	</bean>
	<bean name="printTimesheetController"
		class="com.visualpatterns.timex.controller.PrintTimesheetController">
		<property name="sessionForm">
			<value>true</value>
		</property>
		<property name="commandClass">
			<value>com.visualpatterns.timex.model.Timesheet</value>
		</property>
		<property name="formView">
			<value>printhours</value>
		</property>
		<property name="timesheetManager">
			<ref bean="timesheetManager" />
		</property>
	</bean>
	<bean name="staffHoursController"
		class="com.visualpatterns.timex.controller.StaffHoursController">
		<property name="sessionForm">
			<value>true</value>
		</property>
		<property name="commandClass">
			<value>com.visualpatterns.timex.model.TimesheetList</value>
		</property>
		<property name="formView">
			<value>staffhours</value>
		</property>
		<property name="timesheetManager">
			<ref bean="timesheetManager" />
		</property>
		<property name="employeeManager">
			<ref bean="employeeManager" />
		</property>
		<property name="applicationSecurityManager">
			<ref bean="applicationSecurityManager" />
		</property>
	</bean>
	<bean name="managerSummaryController"
		class="com.visualpatterns.timex.controller.ManagerSummaryController">
		<property name="sessionForm">
			<value>true</value>
		</property>
		<property name="commandClass">
			<value>com.visualpatterns.timex.model.ManagerSummaryList</value>
		</property>
		<property name="formView">
			<value>overallsummary</value>
		</property>
		<property name="employeeManager">
			<ref bean="employeeManager" />
		</property>
		<property name="timesheetManager">
			<ref bean="timesheetManager" />
		</property>
	</bean>
	<bean name="accountingController"
		class="com.visualpatterns.timex.controller.AccountingController">
		<property name="sessionForm">
			<value>true</value>
		</property>
		<property name="commandClass">
			<value>com.visualpatterns.timex.model.TimesheetList</value>
		</property>
		<property name="formView">
			<value>markpaid</value>
		</property>
		<property name="successView">
			<value>redirect:timesheetlist.htm</value>
		</property>
		<property name="timesheetManager">
			<ref bean="timesheetManager" />
		</property>
		<property name="timexJmxBean">
			<ref bean="timexJmxBean" />
		</property>
	</bean>

	<!-- Validators -->
	<bean id="enterHoursValidator"
		class="com.visualpatterns.timex.controller.EnterHoursValidator" />
	<bean id="signinValidator"
		class="com.visualpatterns.timex.controller.SignInValidator" />
	<bean id="approveTimesheetsValidator"
		class="com.visualpatterns.timex.controller.ApproveTimesheetsValidator" />

	<!-- Model classes -->
	<bean id="employeeManager"
		class="com.visualpatterns.timex.model.EmployeeManager" />
	<bean id="timesheetManager"
		class="com.visualpatterns.timex.model.TimesheetManager" />
	<bean id="departmentManager"
		class="com.visualpatterns.timex.model.DepartmentManager" />

	<!-- Utility classes -->
	<bean id="applicationSecurityManager"
		class="com.visualpatterns.timex.util.ApplicationSecurityManager" />

	<!-- View Resolver -->
	<bean id="viewResolver"
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="viewClass">
			<value>org.springframework.web.servlet.view.JstlView</value>
		</property>
		<property name="prefix">
			<value>/WEB-INF/jsp/</value>
		</property>
		<property name="suffix">
			<value>.jsp</value>
		</property>
	</bean>

	<!-- Spring mail support -->
	<bean id="mailSender"
		class="org.springframework.mail.javamail.JavaMailSenderImpl">
		<property name="host" value="nova.edu" />
<!--		<property name="username" value="myuserid" />-->
<!--		<property name="password" value="mypassword" />-->
	</bean>
	<bean id="employeeReminderMessage"
		class="org.springframework.mail.SimpleMailMessage">
		<property name="from" value="ealvaro@nova.edu" />
		<property name="subject" value="Reminder: Submit Timesheet" />
		<property name="text"
			value="Please don't forget to submit your timesheet.  Thank you!" />
	</bean>
	<bean id="managerReminderMessage"
		class="org.springframework.mail.SimpleMailMessage">
		<property name="from" value="ealvaro@nova.edu" />
		<property name="subject" value="Reminder: Approve Timesheets" />
		<property name="text"
			value="Please don't forget to approve the timesheets for your employees.  Thank you!" />
	</bean>
	<bean id="reminderEmail"
		class="com.visualpatterns.timex.job.ReminderEmail">
		<property name="employeeManager">
			<ref bean="employeeManager" />
		</property>
		<property name="mailSender">
			<ref bean="mailSender" />
		</property>
		<property name="employeeReminderMessage">
			<ref bean="employeeReminderMessage" />
		</property>
		<property name="managerReminderMessage">
			<ref bean="managerReminderMessage" />
		</property>
		<property name="timesheetManager">
			<ref bean="timesheetManager" />
		</property>
	</bean>
	<bean id="submittalEmailMessage"
		class="org.springframework.mail.SimpleMailMessage">
		<property name="subject" value="Timesheet Submitted" />
		<property name="text"
			value="My timesheet is submitted.  Regards." />
	</bean>
		<bean id="approvalEmailMessage"
		class="org.springframework.mail.SimpleMailMessage">
		<property name="to" value="accounting@me.com" />
		<property name="subject" value="Timesheet Approved" />
		<property name="text"
			value="Timesheet is approved.  Regards." />
	</bean>
	<bean id="disapprovalEmailMessage"
		class="org.springframework.mail.SimpleMailMessage">
		<property name="subject" value="Timesheet Disapproved" />
		<property name="text"
			value="Timesheet is disapproved, please correct hours.  Regards." />
	</bean>

	<!-- Spring job scheduling -->
	<bean id="remindEmployeeEmailJobDetail"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="reminderEmail" />
		<property name="targetMethod" value="sendEmployeeReminderMail" />
	</bean>
	<bean id="remindEmployeeEmailJobTrigger"
		class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail" ref="remindEmployeeEmailJobDetail" />
		<property name="cronExpression" value="0 0 14 ? * 6" />
	</bean>
	<bean id="remindManagerEmailJobDetail"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="reminderEmail" />
		<property name="targetMethod" value="sendManagerReminderMail" />
	</bean>
	<bean id="remindManagerEmailJobTrigger"
		class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail" ref="remindManagerEmailJobDetail" />
		<property name="cronExpression" value="0 0 16 ? * 6" />
	</bean>
	<bean
		class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="triggers">
			<list>
				<ref bean="remindEmployeeEmailJobTrigger" />
				<ref bean="remindManagerEmailJobTrigger" />
			</list>
		</property>
	</bean>

	<!-- Spring JMX support -->
	<bean id="timexJmxBean"	class="com.visualpatterns.timex.util.TimexJmxBean" />
	<bean id="exporter"	class="org.springframework.jmx.export.MBeanExporter">
		<property name="registrationBehaviorName" value="REGISTRATION_IGNORE_EXISTING" />
		<property name="beans">
			<map>
				<entry key="Time Expression:name=timex-stats" value-ref="timexJmxBean" />
			</map>
		</property>
	</bean>

	<!-- Resource Bundle -->
	<bean id="messageSource"
		class="org.springframework.context.support.ResourceBundleMessageSource">
		<property name="basenames">
			<list>
				<value>messages</value>
			</list>
		</property>
	</bean>
</beans>
